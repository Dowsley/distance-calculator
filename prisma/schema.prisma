datasource db {
  provider = "sqlite"
  url = env("DATABASE_URL") // uses connection pooling
}

generator client {
  provider = "prisma-client-js"
}

model DistanceQuery {
  id                 Int      @id @default(autoincrement())
  sourceAddress      String
  destinationAddress String
  distance           Float
  createdAt          DateTime @default(now())
}
